<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/photos_category_title"
        app:iconSpaceReserved="false">

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="enable_transitions"
            android:summary="@string/enable_transitions_sub"
            android:title="@string/enable_transitions"
            app:iconSpaceReserved="false" />

        <CheckBoxPreference
            android:defaultValue="true"
            android:key="enable_shake"
            android:summary="@string/enable_gestures_sub"
            android:title="@string/enable_gestures"
            app:iconSpaceReserved="false" />

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="low_ram"
            android:summary="@string/low_ram_sub"
            android:title="@string/low_ram"
            app:iconSpaceReserved="false" />

        <ListPreference
            android:defaultValue="5000"
            android:dialogTitle="@string/showcase_dialog_title"
            android:entries="@array/seconds"
            android:entryValues="@array/seconds_values"
            android:key="showcase_speed"
            android:summary="@string/showcase_speed_sub"
            android:title="@string/showcase_speed"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>


</PreferenceScreen>